mixin form()
  form.form(data-need-validation)&attributes(attributes)
    label.form__label.js-validation-wrapper
      input(name="name" class="form__control" type="text" placeholder="Name" data-parsley-required)
    label.form__label.js-validation-wrapper
      input(name="phone" class="form__control" type="phone" placeholder="+7 (999) 999 99 99" data-parsley-required)
    label.form__label
      input(name="company_name" class="form__control" type="text" placeholder="Comany name")

    label.form__check.js-validation-wrapper
      input.visually-hidden(type="checkbox" name="agree")
      span.form__check-label
        | I agree with the &nbsp;
        a(href="/") Privacy Policy
    +button("Submit request")(class="ui-button--black")
